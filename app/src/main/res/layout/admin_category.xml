<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:src="@drawable/ic_baseline_home_24"
            android:backgroundTint="#f29697"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:src="@drawable/ic_baseline_format_list_bulleted_24"
            android:backgroundTint="#007fff"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:src="@drawable/ic_baseline_search_24"
            android:backgroundTint="#f29697"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:src="@drawable/ic_baseline_settings_24"
            android:backgroundTint="#f29697"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Categories"
            android:fontFamily="@font/raleway"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textFontWeight="1000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingTop="100dp"
                android:paddingRight="0dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"

                    android:src="@drawable/lightning"
                    android:contentDescription="Lightning" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="Category name: Lightining "
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="1000" />
                    <TextView
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="No of Items: 20 "
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="1000" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_delete_24"
                            android:backgroundTint="#ffffff"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:backgroundTint="#ffffff"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"

                    android:src="@drawable/ballroom" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="Category name: Halls "
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="1000" />
                    <TextView
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="No of Items: 20 "
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="1000" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_delete_24"
                            android:backgroundTint="#ffffff"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:backgroundTint="#ffffff"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"

                    android:src="@drawable/buffet" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="Category name: Buffet "
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="1000" />
                    <TextView
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="No of Items: 20 "
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/black"
                        android:textFontWeight="1000" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_delete_24"
                            android:backgroundTint="#ffffff"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:backgroundTint="#ffffff"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
           <ImageButton
               android:id="@+id/addnewcategory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_add_24"
               android:layout_gravity="center"
               android:layout_marginTop="50dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
